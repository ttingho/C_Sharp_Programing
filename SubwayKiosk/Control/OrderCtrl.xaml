<UserControl x:Class="SubwayKiosk.Control.OrderCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubwayKiosk.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="9.8*" />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#009841" Grid.ColumnSpan="3"/>
            <Grid Grid.Row="2" Background="#FFCC01" Grid.ColumnSpan="3">
                <TextBlock 
                x:Name="dClock"
                FontSize="25"
                Foreground="#C7C7C7"
                Margin="0 -35 10 0"
                HorizontalAlignment="Right"
                FontWeight="Bold" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
