<UserControl x:Class="SubwayKiosk.Control.OrderCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubwayKiosk.Control"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CategoryTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="FontFamily" Value="TMONMONSORI" />
            <Setter Property="Margin" Value="30 30 0 0" />
        </Style>
        <Style x:Key="lvCategory" TargetType="ListView">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style x:Key="tbOrderInfo" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Foreground" Value="#C7C7C7" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontFamily" Value="TMONMONSORI" />
            <Setter Property="Margin" Value="15 15 0 0" />
        </Style>
        <Style x:Key="ButtonBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="30" />
            <Setter Property="Width" Value="280" />
            <Setter Property="Height" Value="130" />
            <Setter Property="Padding" Value="10" />
        </Style>
        <Style x:Key="Button" TargetType="Button">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="FontFamily" Value="TMONMONSORI" />
        </Style>
        <Style x:Key="lvStyle" TargetType="ListView">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition Width="0.8*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.8*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="../Assets/SUBWAY LOGO jpeg.png" Width="350" Height="250" />
                </Grid>
                <Grid Grid.Row="1">
                    <Grid VerticalAlignment="Top" HorizontalAlignment="Left">
                        <ListView
                            x:Name="lvCategory"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            SelectionChanged="LvCategory_SelectionChanged"
                            Style="{StaticResource lvCategory}">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.Resources>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <Grid>
                                                    <Rectangle
                                                    x:Name="Ra"
                                                    HorizontalAlignment="Left"
                                                    Fill="#C7C7C7"
                                                    Margin="30 25 0 70"
                                                    Width="320"
                                                    Height="10">
                                                    </Rectangle>
                                                    <StackPanel Margin="5 -100 0 0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                        <TextBlock Style="{StaticResource CategoryTitle}" Text="{Binding CategoryName}"></TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsEnabled" Value="false">
                                                        <Setter TargetName="Ra" Property="Fill" Value="#C7C7C7" />
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="true">
                                                        <Setter TargetName="Ra" Property="Fill" Value="#C7C7C7" />
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter TargetName="Ra" Property="Fill" Value="#009841"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="true">
                                                        <Setter TargetName="Ra" Property="Fill" Value="#FFCC01"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>
                        </ListView>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <ListView
                    x:Name="lvOrderMenu"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    Width="1400"
                    Height="650"
                    Style="{StaticResource lvStyle}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Border Background="White" Margin="10" Width="310" Height="290">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="5" BlurRadius="5" Color="#EEEEEE" />
                                    </Border.Effect>
                                    <StackPanel Width="310" Height="290">
                                        <Image Source="{Binding ImagePath}" Width="280" Height="180"/>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="#666666"
                                                FontSize="25"
                                                FontWeight="Bold"
                                                FontFamily="TMONMONSORI"
                                                Text="{Binding KrName}" />
                                            <TextBlock
                                                Margin="0 5 0 0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="#C7C7C7"
                                                FontSize="15"
                                                FontWeight="Bold"
                                                FontFamily="TMONMONSORI"
                                                Text="{Binding EnName}" />
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 10 0 0">
                                                <Button
                                                    Margin="0 0 10 0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Foreground="#009841"
                                                    Background="Transparent"
                                                    FontSize="25"
                                                    FontWeight="Bold"
                                                    BorderThickness="0"
                                                    FontFamily="TMONMONSORI"
                                                    Click="Button_Click_Plus_Menu">
                                                    +
                                                </Button>
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Foreground="#009841"
                                                    FontSize="18"
                                                    FontWeight="Bold"
                                                    FontFamily="TMONMONSORI"
                                                    Text="{Binding Price}" >
                                                원
                                                </TextBlock>
                                                <Button
                                                    Margin="10 0 0 0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Foreground="#009841"
                                                    Background="Transparent"
                                                    FontSize="25"
                                                    FontWeight="Bold"
                                                    BorderThickness="0"
                                                    FontFamily="TMONMONSORI"
                                                    Click="Button_Click_Minus_Menu">
                                                    -
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*" />
                <ColumnDefinition Width="0.4*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.65*" />
                    <ColumnDefinition Width="0.35*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*" />
                        <RowDefinition Height="0.8*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Style="{StaticResource tbOrderInfo}"
                                Text="주문 메뉴">
                            </TextBlock>
                            <TextBlock
                                Margin="250 15 0 0"
                                Style="{StaticResource tbOrderInfo}"
                                Text="가격">
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <ListView
                            x:Name="lvShoppingBasket"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            Style="{StaticResource lvStyle}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="720">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Width="720" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="720">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                            Margin="30 20 0 0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="#666666"
                                            FontFamily="TMONMONSORI"
                                            Text="{Binding KrName}"/>
                                                <TextBlock
                                            Margin="10 20 0 0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="#666666"
                                            FontFamily="TMONMONSORI"
                                            Text="{Binding Count}">
                                            개
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock
                                            Margin="30 20 0 0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="#666666"
                                            FontFamily="TMONMONSORI"
                                            Text="{Binding Price}">
                                            원
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*" />
                        <RowDefinition Height="0.8*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock
                            Style="{StaticResource tbOrderInfo}"
                            Text="합계">
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Row="1">
                        <TextBlock
                            x:Name="total_price"
                            Margin="30 20 0 0"
                            Foreground="#666666"
                            FontWeight="Bold"
                            FontSize="25"
                            FontFamily="TMONMONSORI"
                            Text="0 원">
                        </TextBlock>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border
                        Style="{StaticResource ButtonBorder}"
                        Background="#FFCC01"
                        Margin="0 0 0 0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" Color="#C7C7C7" BlurRadius="10" />
                        </Border.Effect>
                        <Button Style="{StaticResource Button}" Content="주문하기" Click="Button_Click_Add_Order"></Button>
                    </Border>
                </Grid>
                <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border
                        Style="{StaticResource ButtonBorder}"
                        Background="#009841"
                        Margin="0 0 0 0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" Color="#C7C7C7" BlurRadius="10" />
                        </Border.Effect>
                        <Button Style="{StaticResource Button}" Content="주문취소" Click="Button_Click_Cancel_Order"></Button>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
